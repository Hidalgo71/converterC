#include <stdio.h>

int main()
{
	int weight;
	float height, bmi;

	printf("**********************************************************\n\n");
	printf("*** This Program Calculates Your Body Mass Index (BMI) ***\n\n");
	printf("**********************************************************\n\n\n");

	printf("\tEnter your weight in kg.: ");										//Het Weight and Height From User.
	scanf_s("%d", &weight);
	printf("\tEnter your height in meters: ");
	scanf_s("%f", &height);

	bmi =weight ; 														//Body Mass Index (BMI) = Body weight (kg.) / Body height (m.) * Body height (m.)


	printf("result: %.2f\n", bmi);





	system("PAUSE");
	return 0;
}
